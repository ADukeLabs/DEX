@model DEX.Models.Contact


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h3 class="col-sm-6 col-sm-offset-4">Add A New Contact</h3>
        @Html.ValidationSummary(true, "", new { @class= "text-danger"})
        <div class="form-group">
            <h4 class="col-xs-10 col-sm-3 col-sm-offset-4">Name</h4>
            <div class="col-xs-10 col-sm-3 col-sm-offset-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new {@class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <h4 class="col-xs-10 col-sm-3 col-sm-offset-4">Job Title</h4>
            <div class="col-xs-10 col-sm-3 col-sm-offset-4">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 class="col-xs-10 col-sm-3 col-sm-offset-4">Email</h4>
            <div class="col-xs-10 col-sm-3 col-sm-offset-4">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 class="col-xs-10 col-sm-3 col-sm-offset-4">Phone Number</h4>
            <div class="col-xs-10 col-sm-3 col-sm-offset-4">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-10 col-sm-3 col-sm-offset-4">
                <input type="submit" value="Add Contact" class="btn btn-primary" />
            </div>
        </div>

    </div>
}